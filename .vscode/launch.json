{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Fast-API",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "services.run_api:api",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload",
                "--app-dir",
                "src"
            ],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "name": "Migration Local",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/services/run_migration.py",
            "envFile": "${workspaceFolder}/.env.local",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "name": "Migration Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/services/run_migration.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}/src",
            "console": "internalConsole"
        }
    ]
}
